{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@config/*": ["./src/config/*"],
      "@app/*": ["./src/app/*"],
      "@utils/*": ["./src/utils/*"],
      "@decorator": ["./src/decorator"],
      "@srv-constant/*": ["./src/srv-constant/*"],
      "@srv-auth/*": ["./src/srv-auth/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "files"]
}
